<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:gravity="center"
        android:textSize="30dp"
        android:text="@string/them_nhan_vien"
        android:background="@color/orange"/>

    <LinearLayout
        android:weightSum="10"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ScrollView
            android:layout_weight="8"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <LinearLayout
                android:weightSum="11"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_weight="3"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imgAddAvt_user"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_account_avt_64"/>

                    <Button
                        android:id="@+id/btnTakeAPhoto_user"
                        android:layout_marginRight="10dp"
                        android:layout_weight="2"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/custom_button"
                        app:backgroundTint="@null"
                        android:text="@string/chup_anh"/>
                </LinearLayout>

                <EditText
                    android:layout_weight="1"
                    android:id="@+id/edtAddEmail_user"
                    android:textSize="25sp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:paddingLeft="10dp"
                    android:textColor="@color/orange"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:textColorHint="@color/orange"
                    android:background="@drawable/custom_edittext"
                    android:hint="@string/nhap_email"/>

                <EditText
                    android:layout_weight="1"
                    android:id="@+id/edtAddPassword_user"
                    android:textSize="25sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:paddingLeft="10dp"
                    android:textColor="@color/orange"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:textColorHint="@color/orange"
                    android:background="@drawable/custom_edittext"
                    android:hint="@string/nhap_mat_khau"/>

                <EditText
                    android:layout_weight="1"
                    android:id="@+id/edtConfirmPassword_user"
                    android:textSize="25sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:paddingLeft="10dp"
                    android:textColor="@color/orange"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:textColorHint="@color/orange"
                    android:background="@drawable/custom_edittext"
                    android:hint="@string/nhap_lai_mat_khau"/>

                <EditText
                    android:layout_weight="1"
                    android:id="@+id/edtAddName_user"
                    android:textSize="25sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:paddingLeft="10dp"
                    android:textColor="@color/orange"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:textColorHint="@color/orange"
                    android:background="@drawable/custom_edittext"
                    android:hint="@string/nhap_ho_ten"/>

                <EditText
                    android:layout_weight="1"
                    android:id="@+id/edtAddAge_user"
                    android:textSize="25sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:paddingLeft="10dp"
                    android:inputType="number"
                    android:textColor="@color/orange"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:textColorHint="@color/orange"
                    android:background="@drawable/custom_edittext"
                    android:hint="@string/nhap_tuoi"/>

                <EditText
                    android:layout_weight="1"
                    android:id="@+id/edtAddPhone_user"
                    android:textSize="25sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:paddingLeft="10dp"
                    android:textColor="@color/orange"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:textColorHint="@color/orange"
                    android:background="@drawable/custom_edittext"
                    android:hint="@string/nhap_sdt"/>

                <EditText
                    android:layout_weight="1"
                    android:id="@+id/edtAddIdentityCard_user"
                    android:textSize="25sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:paddingLeft="10dp"
                    android:textColor="@color/orange"
                    android:layout_marginRight="10dp"
                    android:inputType="number"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:textColorHint="@color/orange"
                    android:background="@drawable/custom_edittext"
                    android:hint="@string/nhap_cmtnd"/>

                <EditText
                    android:layout_weight="1"
                    android:id="@+id/edtAddAddress_user"
                    android:textSize="25sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:paddingLeft="10dp"
                    android:textColor="@color/orange"
                    android:layout_marginRight="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:textColorHint="@color/orange"
                    android:background="@drawable/custom_edittext"
                    android:hint="@string/nhap_dia_chi"/>
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:layout_weight="2">

            <Button
                android:id="@+id/btnAdd_user"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/custom_button"
                app:backgroundTint="@null"
                android:text="@string/them_nhan_vien" />

            <Button
                android:id="@+id/btnQuitDiaLogAdd_user"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:background="@drawable/custom_button"
                app:backgroundTint="@null"
                android:text="@string/thoat" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>