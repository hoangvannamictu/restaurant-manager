<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="16dp"
    android:layout_marginStart="16dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="25dp">

    <com.chauthai.swipereveallayout.SwipeRevealLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:dragEdge="right"
        app:mode="same_level">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layoutChangeImg_food"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/doi_anh"
                    android:textColor="@color/orange"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutEdit_food"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/sua_thongtin"
                    android:textColor="@color/orange"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutDelete_food"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/xoa"
                    android:textColor="@color/orange"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgStatus_food"
                    android:layout_marginRight="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_status_on_24"/>

                <TextView
                    android:layout_marginLeft="5dp"
                    android:id="@+id/tvStatus_food"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Còn"
                    android:textSize="18sp"
                    android:textColor="@color/orange"/>

                <TextView
                    android:id="@+id/tvAmount_food"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="128"
                    android:textSize="18sp"
                    android:textColor="@color/orange"/>
            </LinearLayout>

            <ImageView
                android:layout_gravity="center"
                android:background="@color/white"
                android:id="@+id/imgAvt_food"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_table_waiting_64" />

            <TextView
                android:id="@+id/tvName_food"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nầm lợn xào"
                android:paddingLeft="5dp"
                android:gravity="center"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/orange"/>

            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvNamePrice_food"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/gia"
                    android:paddingRight="5dp"
                    android:gravity="right"
                    android:textSize="15sp"
                    android:textColor="@color/orange"/>

                <TextView
                    android:id="@+id/tvPrice_food"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:paddingLeft="5dp"
                    android:gravity="left"
                    android:textSize="15sp"
                    android:textColor="@color/orange"/>
            </LinearLayout>
        </LinearLayout>
    </com.chauthai.swipereveallayout.SwipeRevealLayout>
</androidx.cardview.widget.CardView>