<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="16dp"
    android:layout_marginStart="16dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="25dp">

    <LinearLayout
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvIdTable_bill"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="30sp"
            android:textColor="@color/red"/>

        <TextView
            android:id="@+id/tvStatus_bill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/da_dat_truoc"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/orange"/>

        <ImageView
            android:layout_gravity="center"
            android:background="@color/white"
            android:id="@+id/img_bill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_bill_unfinished_64" />

        <TextView
            android:id="@+id/tvDateCreated_bill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="20-11-2020 11:20"
            android:paddingLeft="5dp"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/orange"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>